<h1>Hungry? Grab a Burger!</h1>

<h2>Order Now!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Sold Out!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="addBurg">Burger Name:</label>
    <input type="text" id="newBurg" name="name">
  </div>

    <div class="form-group">
    <label for="state">Available Now</label><br>
    <input type="radio" name="devour" value="1" checked> Available<br>
    <input type="radio" name="devour" value="0"> Sold Out!
  </div>


    <button type="submit">Update Menu</button>
</form>
